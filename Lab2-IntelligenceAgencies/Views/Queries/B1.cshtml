@model IEnumerable<Tuple<AgencyWorker, AgencyWorker>>

@{
    ViewBag.Title = "Запит B1";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="B1" method="get">
            <div class="text-danger"></div>
            
            <div class="form-group">
                <p>Ідентифікатори та імена пар співробітників,
                   що є агентами,
                   множини операцій, в яких вони беруть участь, рівні
                   з потужностями не менше ...</p>
            </div>

            <div class="form-group">
                <input name="param" class="form-control" value="@ViewBag.Num"/>
                <p class="text-danger">@ViewBag.ErrorMessage</p>
            </div>
            
            <br/>

            <div class="form-group">
                <input type="submit" value="Виконати" class="btn btn-primary"/>
            </div>
            
            <br/>
        </form>
    </div>
</div>

<table class="table">
    <thread>
        <tr>
            <th>
                @Html.DisplayNameFor(_ => new AgencyWorker().Id)
            </th>
            <th>
                @Html.DisplayNameFor(_ => new AgencyWorker().FullName)
            </th>
            <th>
                @Html.DisplayNameFor(_ => new AgencyWorker().Id)
            </th>
            <th>
                @Html.DisplayNameFor(_ => new AgencyWorker().FullName)
            </th>
        </tr>
    </thread>
    <tbody>

    @foreach (var tuple in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(item => tuple.Item1.Id)
            </td>
            <td>
                @Html.DisplayFor(item => tuple.Item1.FullName)
            </td>
            <td>
                @Html.DisplayFor(item => tuple.Item2.Id)
            </td>
            <td>
                @Html.DisplayFor(item => tuple.Item2.FullName)
            </td>
        </tr>
    }

    </tbody>

</table>



<div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
  <div class="btn-group me-2" role="group" aria-label="First group">
    <a asp-action="Index" asp-route-query="A1" type="button" class="btn btn-secondary">A1</a>
    <a asp-action="Index" asp-route-query="A2" type="button" class="btn btn-secondary">A2</a>
    <a asp-action="Index" asp-route-query="A3" type="button" class="btn btn-secondary">A3</a>
    <a asp-action="Index" asp-route-query="A4" type="button" class="btn btn-secondary">A4</a>
    <a asp-action="Index" asp-route-query="A5" type="button" class="btn btn-secondary">A5</a>
  </div>
  <div class="btn-group me-2" role="group" aria-label="Second group">
    <a asp-action="Index" asp-route-query="B1" type="button" class="btn btn-secondary">B1</a>
    <a asp-action="Index" asp-route-query="B2" type="button" class="btn btn-secondary">B2</a>
    <a asp-action="Index" asp-route-query="B3" type="button" class="btn btn-secondary">B3</a>
  </div>
</div>
