@model DepartmentHead

@{
    ViewData["Title"] = "Додати Голову Департаменту";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<br/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="@Model.AgencyWorker" class="control-label"></label>
                <select asp-for="Id" asp-items="ViewBag.AgencyWorkers" class="form-control"></select>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="@Model.Department" class="control-label"></label>
                <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.Departments"></select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>
            
            <br/>
            
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br>
<div>
    <a asp-action="Index">До переліку.</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}