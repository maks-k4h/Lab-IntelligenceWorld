@model IEnumerable<Agency>

@{
    ViewData["Title"] = "Агенції";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<ul class="nav nav-pills">
    <li class="nav-item">
        <a class="nav-link" asp-action="Create">Створити нову</a>
    </li>
</ul>

<table class="table">
    <thread>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Headquarters)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thread>
    <tbody>
    
    @foreach (var agency in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(item => agency.Id)
            </td>
            <td>
                @Html.DisplayFor(item => agency.Name)
            </td>
            <td>
                @Html.DisplayFor(item => agency.Headquarters)
            </td>
            <td>
                @Html.DisplayFor(item => agency.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@agency.Id">Редагувати</a> |
                <a asp-action="Delete" asp-route-id="@agency.Id">Видалити</a>
            </td>
        </tr>
    }
    
    </tbody>
    
</table>
