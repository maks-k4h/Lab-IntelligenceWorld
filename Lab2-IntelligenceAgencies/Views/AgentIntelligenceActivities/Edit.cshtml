@model AgentIntelligenceActivity

@{
    ViewData["Title"] = "Редагування";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h4>Розвадкова Діяльність Агента</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <label asp-for="Agent" class="control-label"></label>
                <input value="@Model.AgencyWorker.FullName" class="form-control" readonly=""/>
            </div>

            <div class="form-group">
                <label asp-for="CoverEntity" class="control-label"></label>
                <input value="@Model.CoverEntity.FullName" class="form-control" readonly=""/>
            </div>

            <div class="form-group">
                <label asp-for="Operation" class="control-label"></label>
                <input value="@Model.Operation.Name" class="form-control" readonly=""/>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" asp-items="@ViewBag.AccessLevels" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <br/>
            
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
                |
                <a asp-action="Index">До переліку</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}