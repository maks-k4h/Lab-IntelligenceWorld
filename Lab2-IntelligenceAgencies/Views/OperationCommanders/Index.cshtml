@model IEnumerable<OperationCommander>

@{
    ViewData["Title"] = "Командири операції";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<ul class="nav nav-pills">
    <li class="nav-item">
        <a class="nav-link" asp-action="Create">Створити запис</a>
    </li>
</ul>

<table class="table">
    <thread>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OperationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Operation.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgencyWorker.FullName)
            </th>
            <th></th>
        </tr>
    </thread>
    <tbody>
    
    @foreach (var v in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(item => v.OperationId)
            </td>
            <td>
                @Html.DisplayFor(item => v.Operation.Name)
            </td>
            <td>
                @Html.DisplayFor(item => v.Id)
            </td>
            <td>
                @Html.DisplayFor(item => v.AgencyWorker.FullName)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@v.Id">Видалити</a>
            </td>
        </tr>
    }
    
    </tbody>
    
</table>
