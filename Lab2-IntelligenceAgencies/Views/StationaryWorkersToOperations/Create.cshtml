@model StationaryWorkerToOperation

@{
    ViewData["Title"] = "Залучити Співробітника В Операцію";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<br/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="@Model.StationaryWorker" class="control-label"></label>
                <select asp-for="StationaryWorkerId" asp-items="ViewBag.StationaryWorkers" class="form-control" value="@ViewBag.WorkerId"></select>
                <span asp-validation-for="StationaryWorkerId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="@Model.Operation" class="control-label"></label>
                <select asp-for="OperationId" class="form-control" asp-items="ViewBag.Operations" value="@ViewBag.OperationId"></select>
                <span asp-validation-for="OperationId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="@Model.AccessLevel" class="control-label"></label>
                <select asp-for="AccessLevelId" class="form-control" asp-items="ViewBag.AccessLevels" value="@ViewBag.AccessLevelId"></select>
                <span asp-validation-for="AccessLevelId" class="text-danger"></span>
            </div>
            
            <br/>
            
            <div class="form-group">
                <p class="text-danger">@ViewBag.ErrorMessage</p>
            </div>

            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br>
<div>
    <a asp-action="Index">До переліку.</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}