@model IEnumerable<Operation>

@{
    ViewData["Title"] = "Операції";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<ul class="nav nav-pills">
    <li class="nav-item">
        <a class="nav-link" asp-action="Create">Додати</a>
    </li>
</ul>

<table class="table">
    <thread>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thread>
    <tbody>
    
    @foreach (var operation in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(item => operation.Id)
            </td>
            <td>
                @Html.DisplayFor(item => operation.Name)
            </td>
            <td>
                @Html.DisplayFor(item => operation.Status)
            </td>
            <td>
                @Html.DisplayFor(item => operation.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@operation.Id">Редагувати</a> |
                <a asp-action="Delete" asp-route-id="@operation.Id">Видалити</a>
            </td>
        </tr>
    }
    
    </tbody>
    
</table>
