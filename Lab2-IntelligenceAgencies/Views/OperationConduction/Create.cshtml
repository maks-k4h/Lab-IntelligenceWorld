@model OperationConduction

@{
    ViewData["Title"] = "Розпочати провдедення операції";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<br/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="@Model.Country" class="control-label"></label>
                <select asp-for="CountryId" asp-items="ViewBag.Countries" class="form-control" value="@ViewBag.CountryId"></select>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="@Model.Agency" class="control-label"></label>
                <select asp-for="AgencyId" class="form-control" asp-items="ViewBag.Agencies" value="@ViewBag.AgencyId"></select>
                <span asp-validation-for="AgencyId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="@Model.Operation" class="control-label"></label>
                <select asp-for="OperationId" class="form-control" asp-items="ViewBag.Operations" value="@ViewBag.OperationId"></select>
                <span asp-validation-for="OperationId" class="text-danger"></span>
            </div>

            <br/>
            
            <div class="form-group">
                <p class="text-danger">@ViewBag.ErrorMessage</p>
            </div>

            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br>
<div>
    <a asp-action="Index">До переліку.</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}